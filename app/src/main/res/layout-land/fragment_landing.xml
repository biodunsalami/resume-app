<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/cover_image_View"
        android:layout_width="430dp"
        android:layout_height="match_parent"
        android:src="@drawable/biodun_image"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hi_i_m_biodun"
        android:fontFamily="@font/poppins_bold"
        android:textSize="48sp"
        android:textColor="@color/beige_200"
        android:paddingHorizontal="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/cover_image_View"
        app:layout_constraintStart_toStartOf="@+id/cover_image_View"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:text="@string/about_summary"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="54dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@+id/cover_image_View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/more_button"/>

    <Button
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:layout_marginHorizontal="120dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        android:background="@drawable/rectangle_curved_bg"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cover_image_View"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>